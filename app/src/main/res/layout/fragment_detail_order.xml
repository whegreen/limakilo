<android.support.v4.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/nested_scroll_view"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:clipToPadding="false"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context="id.limakilo.www.bawang.ui.confirmorder.ConfirmOrderFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="right|top">


            <android.support.v7.widget.CardView
                android:id="@+id/card_input_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:cardElevation="@dimen/spacing_medium"
                app:cardUseCompatPadding="true"
                android:paddingTop="16dp"
                android:paddingLeft="16dp"
                android:focusable="true"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/amount_title"
                        android:text="Jumlah yang dibayarkan"
                        android:textColor="?attr/colorPrimaryDark"
                        android:paddingTop="16dp"
                        android:paddingLeft="16dp"
                        />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:textColor="?attr/colorAccent"
                        android:paddingTop="16dp"
                        android:paddingLeft="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginBottom="16dp"
                        android:paddingBottom="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="?attr/colorAccent"
                            android:id="@+id/order_amount"
                            android:text="2"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="?attr/colorAccent"
                            android:text=" x "/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="?attr/colorAccent"
                            android:id="@+id/stock_quantity"
                            android:text="5"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="?attr/colorAccent"
                            android:text=" kg x "/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="?attr/colorAccent"
                            android:id="@+id/stock_price"
                            android:text="17,000"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="?attr/colorAccent"
                            android:text="/kg = "/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="?attr/colorPrimaryDark"
                            android:text="Rp. "/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="?attr/colorPrimaryDark"
                            android:id="@+id/total_payment"
                            android:text="170.000"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="?attr/colorPrimaryDark"
                            android:text=",-"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/rangebar_title"
                        android:text="Jumlah paket yang dipesan"
                        android:textColor="?attr/colorPrimaryDark"
                        android:paddingLeft="16dp"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="16dp"
                        >

                        <id.limakilo.www.bawang.util.widget.CustomNumberPicker
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/numberPicker"
                            android:orientation="vertical"
                            max="10"
                            min="1"
                            dividerColor="@color/color_accent"
                            android:layout_gravity="center_horizontal" />

                    </LinearLayout>


                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_green"
                        android:id="@+id/btn_detail_penerima"
                        android:layout_marginBottom="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_gravity="right"
                        android:textColor="@android:color/white"
                        android:text="lanjut"/>
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_detail_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:cardElevation="@dimen/spacing_medium"
                app:cardUseCompatPadding="true"
                android:focusable="true">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/alamat_pengiriman_title"
                        android:text="Detail Pengiriman"
                        android:textColor="?attr/colorPrimaryDark"
                        android:paddingTop="16dp"
                        android:paddingLeft="16dp"
                        />

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/nama_penerima"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="16dp"
                        android:layout_marginTop="16dp"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        >

                        <EditText
                            android:id="@+id/edit_nama_penerima"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Nama Penerima"
                            android:singleLine="true"
                            android:imeOptions="actionNext"
                            />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/nomor_telepon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="16dp"
                        >

                        <EditText
                            android:id="@+id/edit_nomor_telepon"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:hint="nomor handphone"
                            android:imeOptions="actionNext"
                            />

                    </android.support.design.widget.TextInputLayout>


                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/alamat_penerima"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="16dp"
                        >

                        <EditText
                            android:id="@+id/edit_alamat_penerima"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Alamat pengiriman"
                            android:lines="2"
                            android:imeOptions="actionDone"
                            />

                    </android.support.design.widget.TextInputLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="20dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/spacing_xsmall"
                            android:text="Kota pengiriman : "
                            android:textColor="@color/color_accent"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            >

                            <Spinner
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/spinner"
                                android:entries="@array/city_arrays"
                                android:prompt="@string/city_prompt"
                                android:spinnerMode="dropdown" />

                        </RelativeLayout>

                    </LinearLayout>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_green"
                        android:id="@+id/btn_pesan"
                        android:layout_marginBottom="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_gravity="right"
                        android:textColor="@android:color/white"
                        android:text="pesan"/>

                </LinearLayout>



            </android.support.v7.widget.CardView>

        </LinearLayout>


    </FrameLayout>

 </android.support.v4.widget.NestedScrollView>
